<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@android:color/white">

    <!-- TOP GREEN BAR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#87B86A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:contentDescription="EcoKolek logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"/>

        <!-- Notification Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotifications"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconTint="@android:color/white"
            app:iconSize="24dp"
            android:backgroundTint="@android:color/transparent"
            android:stateListAnimator="@null"
            android:contentDescription="Notifications"
            android:focusable="true"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Notification Badge -->
        <TextView
            android:id="@+id/tvNotificationBadge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#F44336"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="@id/btnNotifications"
            app:layout_constraintTop_toTopOf="@id/btnNotifications"
            android:layout_marginEnd="-10dp"
            android:layout_marginTop="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- GREETING TEXT -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Hi, Kyle! Ready to empower Eco Warriors?"
        android:textColor="#1B5E20"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="24dp"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"/>

    <!-- BIG POST WASTE BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPostWaste"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Post Waste ♻️"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:stateListAnimator="@null"
        app:cornerRadius="10dp"
        app:backgroundTint="#A4C97F"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <!-- SMALLER Stats Card - Perfect Compact Design -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnPostWaste"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A4C97F"
            android:padding="16dp">

            <!-- COMPACT TITLE -->
            <TextView
                android:id="@+id/tvStatsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Barangay Waste Summary"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- PLASTICS & ORGANICS (Left Column) -->
            <TextView
                android:id="@+id/tvPlasticsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Plastics"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvElectronicsLabel"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvPlasticsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12kg"
                android:textColor="#87B86A"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tvElectronicsLabel"
                app:layout_constraintHorizontal_bias="0.044"
                app:layout_constraintStart_toStartOf="@id/tvPlasticsLabel"
                app:layout_constraintTop_toBottomOf="@id/tvPlasticsLabel" />

            <TextView
                android:id="@+id/tvOrganicsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Organics"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvPlasticsValue"
                app:layout_constraintStart_toStartOf="@id/tvPlasticsLabel"
                app:layout_constraintEnd_toStartOf="@id/tvElectronicsLabel"/>

            <!-- ELECTRONICS & OTHERS (Right Column) -->
            <TextView
                android:id="@+id/tvOrganicsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8kg"
                android:textColor="#87B86A"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tvElectronicsLabel"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintStart_toStartOf="@id/tvOrganicsLabel"
                app:layout_constraintTop_toBottomOf="@id/tvOrganicsLabel" />

            <TextView
                android:id="@+id/tvElectronicsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Electronics"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvStatsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="105dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvElectronicsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4kg"
                android:textColor="#87B86A"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvElectronicsLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvOthersLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvElectronicsValue"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="105dp"/>

            <TextView
                android:id="@+id/tvOthersValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2kg"
                android:textColor="#87B86A"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvOthersLabel"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- COMPACT TOTAL -->
            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total 26kg collected"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvOrganicsValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>



    <!-- Features Header -->
    <TextView
        android:id="@+id/tvFeatures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Actions"
        android:textColor="#87B86A"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/cardStats"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"/>

    <!-- 2x2 Features Grid -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/featuresGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvFeatures"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp">

        <!-- Top Row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSchedulePickup"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="Schedule\nPickup"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null"
            app:cornerRadius="10dp"
            app:backgroundTint="#A4C97F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnTracking"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTracking"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="Tracking"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null"
            app:cornerRadius="10dp"
            app:backgroundTint="#A4C97F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnSchedulePickup"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"/>

        <!-- Bottom Row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewPosts"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="View\nPosts"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null"
            app:cornerRadius="10dp"
            app:backgroundTint="#A4C97F"
            app:layout_constraintTop_toBottomOf="@id/btnSchedulePickup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCommunity"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCommunity"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="Community\nCleanup"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null"
            app:cornerRadius="10dp"
            app:backgroundTint="#A4C97F"
            app:layout_constraintTop_toBottomOf="@id/btnTracking"
            app:layout_constraintStart_toEndOf="@id/btnViewPosts"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
