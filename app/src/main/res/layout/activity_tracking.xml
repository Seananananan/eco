<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F9EE"
    android:id ="@+id/trackinglayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TOP BAR -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBarTracking"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#87B86A"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="110dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

            </LinearLayout>

            <TextView
                android:id="@+id/btnMenuTracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="≡"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- STATUS CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBarTracking">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- select which pickup/post -->
                <TextView
                    android:id="@+id/tvSelectPickupLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select pickup"
                    android:textColor="#4E4E4E"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:id="@+id/rowSelectPickup"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#F5F9EE"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvSelectedPickup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Choose report"
                        android:textColor="#1B5E20"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iconDropdown"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#1B5E20" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D8E7C6" />

                <TextView
                    android:id="@+id/tvStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup status"
                    android:textColor="#1B5E20"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp" />


                <!-- Pickup Requested -->
                <LinearLayout
                    android:id="@+id/stepRequested"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iconRequested"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_status_circle_done"
                            android:padding="4dp"
                            android:src="@android:drawable/ic_input_add" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#DDECC8" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Pickup Requested"
                        android:textColor="#1B5E20"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Collector Assigned -->
                <LinearLayout
                    android:id="@+id/stepAssigned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iconAssigned"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_status_circle_idle"
                            android:padding="4dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#DDECC8" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Collector Assigned"
                        android:textColor="#4E4E4E"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Collector On The Way (active) -->
                <LinearLayout
                    android:id="@+id/stepOnTheWay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iconOnTheWay"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_status_circle_active"
                            android:padding="4dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#DDECC8" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Collector On The Way"
                        android:textColor="#1B5E20"

                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Collected -->
                <LinearLayout
                    android:id="@+id/stepCollected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iconCollected"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bg_status_circle_idle"
                            android:padding="4dp" />
                        <!-- no connector here, last step -->
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Collected"
                        android:textColor="#4E4E4E"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- subtle divider at bottom -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#EEF4E0" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- NOTIFICATION CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNotification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardStatus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:background="#E3F0D0"
                        android:padding="3dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="#1B5E20" />

                    <TextView
                        android:id="@+id/tvNotifHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Route update"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvNotifBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Collector ETA: 15–20 minutes. Please keep your waste bags visible near the pickup point."
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- DASHBOARD CARD (compact, proportional) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#E7F2D7"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardNotification"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDashTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly basura"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvMonthLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Barangay summary"
                        android:textColor="#6B6B6B"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Small description -->
                <TextView
                    android:id="@+id/tvDashDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Waste collected by EcoKolek trucks this month (kg)."
                    android:textColor="#7A7A7A"
                    android:textSize="10sp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="#D2E4C0" />

                <!-- First row: Plastics + Electronics -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <!-- Plastics -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plastics"
                            android:textColor="#5A5A5A"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvPlasticsKg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="12 kg"
                            android:textColor="#1B5E20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Electronics -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Electronics"
                            android:textColor="#5A5A5A"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvElectronicsKg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="4 kg"
                            android:textColor="#1B5E20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Second row: Organics + Others -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <!-- Organics -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organics"
                            android:textColor="#5A5A5A"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvOrganicsKg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="8 kg"
                            android:textColor="#1B5E20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Others -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Others"
                            android:textColor="#5A5A5A"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvOthersKg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="2 kg"
                            android:textColor="#1B5E20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Total -->
                <TextView
                    android:id="@+id/tvTotalKg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Total: 26 kg collected"
                    android:textColor="#3E6E34"
                    android:textSize="10sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
