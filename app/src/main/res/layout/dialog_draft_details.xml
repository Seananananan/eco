<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBarDialogDraft"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="#87B86A">

                <TextView
                    android:id="@+id/tvDialogDraftTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Draft details"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <!-- IMAGE -->
                    <ImageView
                        android:id="@+id/imgDraftFull"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:background="#E3F0D0" />

                    <!-- TITLE -->
                    <TextView
                        android:id="@+id/tvDraftTitleFull"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="#1B5E20"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- META (weight, type, last edited) -->
                    <TextView
                        android:id="@+id/tvDraftMetaFull"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#757575"
                        android:textSize="12sp" />

                    <!-- WASTE DETAILS LABEL -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Waste details"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- WEIGHT -->
                    <TextView
                        android:id="@+id/tvDraftWeightFull"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#424242"
                        android:textSize="14sp" />

                    <!-- TYPE -->
                    <TextView
                        android:id="@+id/tvDraftWasteTypeFull"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#424242"
                        android:textSize="14sp" />

                    <!-- DESCRIPTION LABEL -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Description"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- NOTE -->
                    <TextView
                        android:id="@+id/tvDraftNoteFull"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="#EEEEEE" />

                    <!-- ACTION BUTTONS: EDIT / DELETE / PUBLISH -->
                    <LinearLayout
                        android:id="@+id/layoutDraftActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEditDraftDialog"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Edit"
                            android:textAllCaps="false"
                            android:textColor="#87B86A" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDeleteDraftDialog"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Delete"
                            android:textAllCaps="false"
                            android:textColor="#D32F2F" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPublishDraftDialog"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Publish"
                            android:textAllCaps="false"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
