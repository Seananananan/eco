<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9EE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/communityActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#A4C97F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTitleCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community Cleanup"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowOnMap"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Show on Map"
            android:textAllCaps="false"
            android:textColor="#2E4D26"
            android:textSize="14sp"
            android:stateListAnimator="@null"
            app:cornerRadius="16dp"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="#C8D7B6"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvUpcomingLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Events"
            android:textStyle="bold"
            android:textColor="#2E4D26"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/btnShowOnMap"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMainEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvUpcomingLabel1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgMainEvent"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Event image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="#D5E9C8"/>

                <TextView
                    android:id="@+id/tvMainEventTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Camp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#2E4D26"
                    app:layout_constraintTop_toBottomOf="@id/imgMainEvent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnJoinMain"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvMainEventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 Mar Sun"
                    android:textSize="12sp"
                    android:textColor="#607D4F"
                    app:layout_constraintTop_toBottomOf="@id/tvMainEventTitle"
                    app:layout_constraintStart_toStartOf="@id/tvMainEventTitle"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tvMainEventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ kheydoliel"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    app:layout_constraintTop_toBottomOf="@id/tvMainEventDate"
                    app:layout_constraintStart_toStartOf="@id/tvMainEventTitle"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnJoinMain"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Join Event"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:stateListAnimator="@null"
                    app:cornerRadius="14dp"
                    app:backgroundTint="#8BB86B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvUpcomingLabel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming Events"
            android:textStyle="bold"
            android:textColor="#2E4D26"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/cardMainEvent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/layoutSmallEvents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvUpcomingLabel2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="#D5E9C8"
                        android:contentDescription="event"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#2E4D26"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27 Apr 12 am"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="#D5E9C8"
                        android:contentDescription="event"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Throe/the"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#2E4D26"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28 Apr"
                        android:textSize="12sp"
                        android:textColor="#777777"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutSmallEvents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
